package entity.rol;

import java.util.Date;

public abstract class EmployeeAbs extends Person {
	
	private double salary;
	private Date inicioLaboral;
	
	protected EmployeeAbs(String id, String nombre, String apellido, Date fecha, double salary, Date inicioLaboral) {
		super(id, nombre, apellido, fecha);
		this.setSalary(salary);
		this.setInicioLaboral(inicioLaboral);
	}

	public double getSalary() {
		return salary;
	}

	public void setSalary(double salary) {
		this.salary = salary;
	}

	public Date getInicioLaboral() {
		return inicioLaboral;
	}

	public void setInicioLaboral(Date inicioLaboral) {
		this.inicioLaboral = inicioLaboral;
	}

}
