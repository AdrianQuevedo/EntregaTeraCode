package dto;

import java.util.ArrayList;
import java.util.Date;
import java.util.List;

public class Alumno extends Persona {

	private List<String> materias = new ArrayList<>();
	
	public Alumno (String id, String nombre, String apellido, Date fecha, ArrayList<Materia> materias) {
		super(id, nombre, apellido, fecha);
		this.materias = materias;
	}
	
	public Alumno (String id, String nombre, String apellido, Date fecha) {
		super(id, nombre, apellido, fecha);
	}

	public List<String> getMaterias() {
		return materias;
	}

	public void setMaterias(List<String> materias) {
		this.materias = materias;
	}
	
	public void addMateria(String materia) {
		this.materias.add(materia);
	}
	
	public String deleteMateria(int pos) {
		if (pos < this.materias.size())
			return this.materias.remove(pos);
		else
			return null;
	}
}
