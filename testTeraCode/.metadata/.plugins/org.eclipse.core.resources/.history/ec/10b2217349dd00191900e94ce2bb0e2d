package entity.rol;

import java.util.Date;

public abstract class EmployeeAbs extends Person {
	
	private double salario;
	private Date inicioLaboral;
	
	protected EmployeeAbs(String id, String nombre, String apellido, Date fecha, double salario, Date inicioLaboral) {
		super(id, nombre, apellido, fecha);
		this.setSalario(salario);
		this.setInicioLaboral(inicioLaboral);
	}

	public double getSalario() {
		return salario;
	}

	public void setSalario(double salario) {
		this.salario = salario;
	}

	public Date getInicioLaboral() {
		return inicioLaboral;
	}

	public void setInicioLaboral(Date inicioLaboral) {
		this.inicioLaboral = inicioLaboral;
	}

}
